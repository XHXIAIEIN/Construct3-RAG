    "webgl",
    "webgpu"
  ],
  "blendsBackground": false,
  "preservesOpaqueness": true,
  "animated": false,
  "parameters": [
    {
      "id": "upper-threshold",
      "type": "percent",
      "name_zh": "upper-threshold",
      "name_en": "upper-threshold",
      "initialValue": 0.5,
      "interpolatable": true
    },
    {
      "id": "lower-threshold",
      "type": "percent",
      "name_zh": "lower-threshold",
      "name_en": "lower-threshold",
      "initialValue": 0.4,
      "interpolatable": true
    },
    {
      "id": "post-opacity",
      "type": "percent",
      "name_zh": "post-opacity",
      "name_en": "post-opacity",
      "initialValue": 1,
      "interpolatable": true
    }
  ]
